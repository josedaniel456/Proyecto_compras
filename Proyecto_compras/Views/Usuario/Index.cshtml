@model List<Proyecto_compras.Models.Usuario>

<h2 class="mb-3">Usuarios</h2>
<a asp-action="Crear" class="btn btn-primary mb-3">➕ Nuevo Usuario</a>

<table class="table table-bordered text-center">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nombre</td>
                <td>@u.Correo</td>
                <td>@u.Rol</td>
                <td>
                    @if (u.Estado)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </td>
                <td>
                    <a asp-action="Editar" asp-route-id="@u.Id" class="btn btn-warning btn-sm">✏️ Editar</a>
                    @if (u.Estado)
                    {
                        <a asp-action="CambiarEstado" asp-route-id="@u.Id" asp-route-estado="false" class="btn btn-danger btn-sm">Desactivar</a>
                    }
                    else
                    {
                        <a asp-action="CambiarEstado" asp-route-id="@u.Id" asp-route-estado="true" class="btn btn-success btn-sm">Activar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
