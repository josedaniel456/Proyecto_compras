@{
    Layout = null;
}
@model Proyecto_compras.Models.RespuestaProveedor

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="card shadow-lg p-4">
            <h3 class="text-center text-primary mb-4">Formulario de Cotización</h3>
            @if (ViewBag.Exito != null)
            {
                <div class="alert alert-success text-center">@ViewBag.Exito</div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <form method="post">
                <input type="hidden" asp-for="ProveedorId" value="@ViewBag.ProveedorId" />
                <input type="hidden" asp-for="NumSolicitud" value="@ViewBag.NumSolicitud" />
                <input type="hidden" asp-for="ProveedorId" value="@ViewBag.ProveedorId" />

                <div class="mb-3">
                    <label class="form-label">N° Solicitud</label>
                    <input type="text" class="form-control" value="@ViewBag.NumSolicitud" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label">Número de Artículo</label>
                    <input asp-for="NumArticulo" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Cantidad</label>
                    <input asp-for="Cantidad" type="number" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Precio Unitario</label>
                    <input asp-for="PrecioUnitario" type="number" step="0.01" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Método de Pago</label>
                    <select asp-for="MetodoPago" class="form-select" required>
                        <option value="">Seleccione...</option>
                        <option value="Transferencia Bancaria">Transferencia Bancaria</option>
                        <option value="Efectivo">Efectivo</option>
                        <option value="Crédito">Crédito</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Tiempo de Entrega (días)</label>
                    <input asp-for="TiempoEntrega" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-success w-100 mt-3">Enviar Cotización</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
